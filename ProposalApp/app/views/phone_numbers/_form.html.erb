<%= simple_form_for @phone_number do |f| %>
  
  <% if @phone_number.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@phone_number.errors.count, "error") %> prevented this phone_number from being saved:
        <!-- 'pluralize' is a rails helper that takes a number and a string as arguments. If the number is greater than one, the string is automatically pluralized. -->
      </h2>
      <ul>
        <% @phone_number.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<!-- The 'url: phone_numbers_path' tells the form to 
submit to the phone_numbers POST route by default. The
'form_for :phone_number' part tells rails that the form 
is for our 'phone_numbers' resource. -->
  <form class="col-md-4">
    <div class="form-group">
      <%= f.label :phone_number %><br>
      <%= f.telephone_field :phone_number, placeholder: '(xxx) xxx-xxxx', :class => "form-control" %>
    </div>
    <div class="form-group">
      <%= f.fields_for :phone_types do |x| %>
        <%= x.label :name %><br>
        <%= x.text_field :name %>
      <% end %>
    </div>

    <%= f.button :submit, :class => "btn btn-default" %>
  </form>
<% end %>