<div class="page-header">
  <h2>People</h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Date Modified</th>
    </tr>
  </thead>
  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= "#{person.first_name}" %></td>
        <td><%= "#{person.last_name}" %></td>
        <td>phone</td>
        <td>email</td>
        <td><%= "#{person.updated_at}" %> <%= link_to 'Delete', person, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Person", new_person_path, :class => 'btn btn-primary' %>